{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    {% embed 'macros/_section.html.twig' %}
        {% block content %}
            <h1 class="text-2xl text-center font-bold">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Saisissez votre adresse e-mail, et nous vous enverrons
                    un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Envoyer le lien de réinitialisation</button>
            {{ form_end(requestForm) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
