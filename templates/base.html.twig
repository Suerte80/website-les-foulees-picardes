<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% block title %}Les Foul√©es Picardes{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="bg-sand text-ink">
{# Flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="max-w-3xl mx-auto my-3 p-3 rounded bg-white shadow">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% include 'partials/_header.html.twig' %}

<main class="min-h-dvh">
    {% block body %}{% endblock %}
</main>

{% include 'partials/_footer.html.twig' %}

{% block javascripts %}
    {{ importmap('app') }}
{% endblock %}
</body>
</html>
