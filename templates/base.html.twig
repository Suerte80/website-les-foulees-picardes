<!DOCTYPE html>
<html lang="fr" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% block title %}Les Foulées Picardes{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="bg-sand text-ink flex flex-col min-h-screen">
{# Flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="max-w-3xl mx-auto my-3 p-3 rounded bg-white shadow">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% include 'partials/_header.html.twig' %}

<main class="flex-grow flex flex-col items-center justify-center p-4">
    {% block body %}{% endblock %}
</main>

{% include 'partials/_footer.html.twig' %}

{% block javascripts %}
    {{ importmap('app') }}
{% endblock %}

<!-- Indicateur de breakpoint (copie-le proche de </body>) -->
<div class="fixed bottom-10 right-2 z-[9999] pointer-events-none select-none">
    <div
        class="px-2 py-1 rounded-lg bg-black/70 text-white font-mono text-xs tracking-tight
           after:inline-block
           after:content-['xs_(<640px)']
           sm:after:content-['sm_(≥640px)']
           md:after:content-['md_(≥768px)']
           lg:after:content-['lg_(≥1024px)']
           xl:after:content-['xl_(≥1280px)']
           2xl:after:content-['2xl_(≥1536px)']">
    </div>
</div>


</body>
</html>
