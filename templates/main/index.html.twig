{% extends 'base.html.twig' %}

{% block title %}Les Foulées Picardes — Accueil{% endblock %}

{% block body %}

    {% include 'main/_hero.html.twig' %}

    <!-- BOXES details/summary -->
    <section aria-labelledby="infos" class="w-full max-w-6xl mx-auto px-5 mt-10 mb-16">
        <div class="grid grid-cols-1 lg:w-auto gap-6 items-stretch">

            <!-- Actus -->
            {% embed 'macros/_details_main_page.html.twig' with{
                id: 'actus',
                title: 'Dernières actualités',
                content: lastNewsTeaser|default('Annonce des 10 km — nouveau parcours, bénévoles recherchés…'),
                link: '#',
            } %}
            {% endembed %}

            <!-- Sorties longues (mise en avant légère en lg) -->

            {% embed 'macros/_details_main_page.html.twig' with{
                id: 'sorties',
                title: 'Sorties longue dimanche',
                content: sundayRunText|default('RDV 9h au parking du bois, 18 km allure tranquille, ravito au km 10.'),
                link: '#',
                link_text: 'Voir le détail'
            } %}
            {% endembed %}

            <!-- Prochaine course -->
            {% embed 'macros/_details_main_page.html.twig' with{
                id: 'course',
                title: 'Prochaine course',
                content: nextRace.name|default('Relais de l’Oise') ~ '-' ~ nextRace.date|default('5 juin 2025'),
                link: '#',
                link_text: 'S\'inscrire',
                button: 1
            } %}
            {% endembed %}

        </div>
    </section>

{% endblock %}
