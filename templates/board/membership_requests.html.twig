{% extends 'base.html.twig' %}

{% block title %}Hello BoardController!{% endblock %}

{% block body %}
    <div class="flex flex-col gap-4">
        <h1>Panneau de validation des requêtes de membres&nbsp;:</h1>
        <h3>*À utiliser sur dekstop.</h3>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Adresse</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Date/heure de demande</th>
                <th scope="col">Action</th>
            </tr>
            </thead>

            <tbody>
            {% for membership_request in membership_requests %}
                <tr id="row-{{ membership_request.id }}">
                    <th>{{ membership_request.requester.firstname }}</th>
                    <th>{{ membership_request.requester.lastname }}</th>
                    <th>{{ membership_request.requester.email }}</th>
                    <th>{{ membership_request.requester.address }}</th>
                    <th>{{ membership_request.requester.dateOfBirth|date('d/m/Y') }}</th>
                    <th>{{ membership_request.createdAt|date('d/m/Y h:m') }}</th>
                    <th class="flex flex-row gap-1">
{#                        <form action="{{ path('app_secretary_validate', {id: membership_request.id}) }}" method="POST">#}
                            <button
                                type="submit"
                                class="btn btn-secondary btn-validate btn-validate-request bg-accent text-white"
                                data-id="{{ membership_request.id }}"
                                data-url="{{ path('app_secretary_validate', { id: membership_request.id }) }}"
                                data-token="{{ csrf_token('validate' ~ membership_request.id) }}"
                                data-rowsel="#row-{{ membership_request.id }}"
                            >Valider</button>
{#                        </form>#}

                        <form action="{{ path('app_secretary_reject', {id: membership_request.id}) }}" method="POST">
                            <button
                                type="submit"
                                class="btn btn-cancel btn-cancel-request"
                                data-id="{{ membership_request.requester.id }}"
                                data-url="{{ path('app_secretary_reject', { id: membership_request.id }) }}"
                                data-token="{{ csrf_token('reject' ~ membership_request.id) }}"
                                data-rowsel="#row-{{ membership_request.id }}"
                            >Rejeter</button>
                        </form>
                    </th>
                </tr>
            {% else %}
                <tr>
                    <th colspan="100%">Aucune requête en attente.</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <template id="empty-table-template">
        <tr>
            <th colspan="100%">Aucune requête en attente.</th>
        </tr>
    </template>
{% endblock %}
