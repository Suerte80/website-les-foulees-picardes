{% extends 'base.html.twig' %}

{% block title %}Hello BoardController!{% endblock %}

{% block body %}
    <h1 class="pb-4">Liste des applications disponibles&nbsp;:</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Lien</th>
        </tr>
        </thead>
        <tbody>
        {% if is_granted('ROLE_PRESIDENT') %}#}
        {% elseif is_granted('ROLE_VICE_PRESIDENT') %}
        {% elseif is_granted('ROLE_SECRETAIRE') %}

            <tr>
                <td>Adhésions</td>
                <td>Validation des demandes d'adhésions</td>
                <td><a href="{{ path('app_secretary_requests') }}">Lien</a></td>
            </tr>

        {% elseif is_granted('ROLE_TRESORIER') %}
        {% elseif is_granted('ROLE_COM') %}
        {% elseif is_granted('ROLE_VIE_ASSO') %}
        {% elseif is_granted('ROLE_BUREAU') %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
