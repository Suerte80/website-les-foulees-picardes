{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
    {% embed 'macros/_section.html.twig' %}
        {% block content %}
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {{ form_start(loginForm, { action: path('app_login'), method: 'POST' }) }}
            {{ form_row(loginForm.username) }}
            {{ form_row(loginForm.password) }}
            {{ form_row(loginForm.rememberMe) }}

            <p class="mt-3">
                <a href="{{ path('app_forgot_password_request') }}" class="underline text-flash-info cursor-pointer">Mot de passe oubli√© ?</a>
            </p>

            {# CSRF attendu par form_login (enable_csrf: true) #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button class="btn btn-primary">Se connecter</button>
            {{ form_end(loginForm) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
